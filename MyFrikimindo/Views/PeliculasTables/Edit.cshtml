        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-primary" })

        </div>
    </div>
</div>
}


